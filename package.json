{
  "name": "wifi-sentry",
  "version": "1.0.0",
  "description": "A WiFi monitoring and security application that detects evil twins, karma attacks, WiFi pineapples, and emerging WiFi spoofing techniques.",
  "main": "server.js",
  "homepage": "./",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:all",
    "build:all": "npm run web:build && npm run desktop:build-web && npm run mobile:build",
    "test": "jest --detectOpenHandles",
    "lint": "eslint . --fix",
    "web:dev": "cd web-app && npm run dev",
    "web:build": "cd web-app && npm run build",
    "desktop:dev": "electron desktop/main.js",
    "desktop:build-web": "cd web-app && npm run build && cd ..",
    "desktop:build": "npm run desktop:build-web && electron-builder --publish never",
    "desktop:build-win": "npm run desktop:build",
    "mobile:setup": "npx @capacitor/cli@latest init wifi-sentry wifi.sentry && npx @capacitor/cli add android",
    "mobile:sync": "npx @capacitor/cli sync",
    "mobile:build": "cd web-app && npm run build && cd .. && npx @capacitor/cli sync",
    "mobile:open": "npx @capacitor/cli open android",
    "mobile:run": "npx @capacitor/cli run android",
    "mobile:compile": "cd android && ./gradlew assembleRelease && cd ..",
    "verify-services": "node verify-services.js",
    "validate-env": "node utils/validate-env.js MONGODB_URI_TEST",
    "test:integration": "mocha --exit test/integration || echo \"No integration tests configured\""
  },
  "dependencies": {
    "@google/generative-ai": "^0.3.1",
    "axios": "^1.13.5",
    "cors": "^2.8.6",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.19.0",
    "firebase-admin": "^12.7.0",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "mongoose": "^8.23.0",
    "node-wifi": "^2.0.16",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.2.1",
    "@capacitor/core": "^6.2.1",
    "electron": "^40.6.0",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.8.3",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "mocha": "^10.8.2",
    "mongodb": "^5.9.2",
    "nodemon": "^3.1.14"
  },
  "electron-builder": {
    "appId": "com.wifisentry.app",
    "productName": "WiFi Sentry",
    "files": [
      "desktop/main.js",
      "desktop/preload.js",
      "desktop/assets/**/*",
      "node_modules/**/*",
      "server.js",
      "*.js",
      "config.js",
      "database.js",
      "aiService.js",
      "wifi-scanner.js",
      "location-tracker.js",
      "*.json",
      "web-app/out/**/*"
    ],
    "directories": {
      "buildResources": "desktop/assets",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "certificateFile": null,
      "certificatePassword": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WiFi Sentry"
    }
  },
  "author": "WiFi Sentry Team",
  "license": "MIT",
  "keywords": [
    "wifi-security",
    "threat-detection",
    "evil-twin",
    "karma-attack",
    "wifi-pineapple",
    "ai-research",
    "cross-platform",
    "electron",
    "capacitor",
    "pwa"
  ]
}
