# WiFi Sentry Environment Configuration
# Copy this to `.env` locally and fill in real values (use secrets for production)
# NEVER commit `.env` to version control

## Server Configuration
NODE_ENV=development
PORT=3000

## Database (MongoDB/Atlas)
# Use MongoDB connection string (SRV format for Atlas):
# mongodb+srv://<username>:<password>@cluster.mongodb.net/<dbname>?retryWrites=true&w=majority
MONGO_URI=

## Authentication & Session
SESSION_SECRET=your-secure-session-key-here
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password-here

## APIs (Optional - leave blank if not used)
GOOGLE_GEMINI_API_KEY=
GOOGLE_MAPS_API_KEY=
WIGLE_API_NAME=
WIGLE_API_TOKEN=

## CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

## Google Cloud Configuration
GOOGLE_GENAI_USE_GCA=false
GOOGLE_GENAI_USE_VERTEXAI=false

## WiFi Adapter Management
ADAPTER_MANAGEMENT_ENABLED=true
ADAPTER_AUTO_DETECT_WINDOWS=true
ADAPTER_MONITOR_INTERVAL=5000
ANDROID_ADAPTER_ROOT_REQUIRED=true
ANDROID_ADAPTER_ADVANCED_MODES=true
ANDROID_USB_DETECTION_METHOD=capacitor

## Logging
DEBUG=false
LOG_LEVEL=info

